package javabacis;

public class charactersdemo {

	public static void main(String[] args) {

		//program to demonstrate the characters data type.
		
		char ch1,ch2;
		
		ch1=88; //the value of x (unicode value of x)
		
		ch2='y';
		
		System.out.println("the ch1 and ch2 are:");
		
		System.out.println(ch1+" "+ch2);
		
		
		//java uses unicode to represent chars.
		//unicode defines fully international char set that can represent all human languages.
		//so in java char is 16 bit.
	}
	

}
